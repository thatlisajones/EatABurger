<h1>Bingey the Cat</h1>

<h2>Burgers to eat:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a new burger:</h2>

 <form class="create-form">
      <div class="form-group row mx-4">
          <div class="col-sm-8">
              <input type="text" class="form-control form-control-lg" id="burgerNameInput" placeholder="What's the name of the burger you want?">
          </div>
      </div>
          <div class="form-group row mx-4">
              <div class="col-sm-8">
                  <button type="submit" class="btn btn-secondary" id="addBurger">Place your order</button>
              </div>
          </div>
    </form>
