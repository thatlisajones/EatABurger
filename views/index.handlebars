<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="text-center">
      {{!-- <h1 class="display-4">Bingey the Cat</h1> --}}
      <img src="./assets/img/CatBurgerer.jpg" class="img-fluid" alt="Responsive image">
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Burgers to eat:</h5>
          <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
              {{/unless}}
              {{/each}}
            </ul>
          </p>

        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Burgers eaten:</h5>
          <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devour=false}}
              {{/if}}
              {{/each}}
            </ul>
          </p>

        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-med-4">
        <div class="card">
          <h2 class="card-header text-center">Create a burger:</h2>
          <div class="row">
            <br>
            <form class="create-form">
              <div class="form-group row mx-4">
                <div class="col-sm-8">
                  <input type="text" class="form-control form-control-lg" id="burgerNameInput" placeholder="Name it.">
                </div>
              </div>
              <div class="form-group row mx-4">
                <div class="col-sm-8">
                  <button type="submit" class="btn btn-secondary" id="addBurger">Place your order</button>
                </div>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
